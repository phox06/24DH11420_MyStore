@model _24DH11420_LTTH_BE234.Models.Order

@{
    ViewBag.Title = "Đặt Hàng Thành Công";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}
<div class="alert alert-success text-center">
    <h2>XÁC NHẬN ĐƠN HÀNG</h2>
    <p>Cảm ơn bạn đã đặt hàng! Đơn hàng của bạn đã được ghi nhận.</p>
</div>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <h3>Thông tin đơn hàng</h3>
        <p><strong>Mã đơn hàng:</strong> @Model.OrderID</p>
        <p><strong>Ngày đặt hàng:</strong> @Model.OrderDate.ToShortDateString()</p>
        <p><strong>Tổng số tiền:</strong> @string.Format("{0:N0}", Model.TotalAmount) ₫</p>
        <p><strong>Trạng thái thanh toán:</strong> @Model.PaymentStatus</p>
        <p><strong>Phương thức giao hàng:</strong> @Model.DeliveryMethod</p>
        <p><strong>Địa chỉ giao hàng:</strong> @Model.ShippingAddress</p>
        <hr />

        <h3>Chi tiết đơn hàng</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Sản phẩm</th>
                    <th>Số lượng</th>
                    <th>Đơn giá</th>
                    <th>Tổng giá</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderDetails)
                {
                    <tr>
                        <td>@(item.Product != null ? item.Product.ProductName : "Sản phẩm không tồn tại")</td>
                        <td>@item.Quantity</td>
                        <td>@string.Format("{0:N0}", item.UnitPrice) ₫</td>
                        <td>@string.Format("{0:N0}", item.TotalPrice) ₫</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="text-center mt-4">
            @Html.ActionLink("Tiếp tục mua sắm", "Index", "Home", null, new { @class = "btn btn-primary" })
        </div>
    </div>
</div>