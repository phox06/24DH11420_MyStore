@model _24DH11420_LTTH_BE234.Models.ViewModel.SearchProductVM


@{
    ViewBag.Title = "Search Product";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Search</title>
    <style>
        .search-container, .order-container {
            padding-top: 20px;
            display: flex;
            justify-content: center;
            align-content: center;
        }
    </style>
</head>
<body>
    @using (Html.BeginForm("Index", "Products", FormMethod.Get))
    {
        <div class="form-group search-container">
            @Html.TextBoxFor(m => m.SearchTerm, new { @class = "form-control", placeholder = "Nhập tên sản phẩm cần tìm" })
            @Html.TextBoxFor(m => m.MinPrice, new { @class = "form-control", placeholder = "Nhập giá tối thiểu", type = "number" })
            @Html.TextBoxFor(m => m.MaxPrice, new { @class = "form-control", placeholder = "Nhập giá tối đa", type = "number" })



            }

            <button type="submit" class="btn btn-primary" style="margin-left:10px">Tìm kiếm</button>

        </div>
    }
    @Html.Partial("PVListProduct", Model)
    
</body>
</html>
