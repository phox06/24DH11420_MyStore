@model IEnumerable<_24DH11420_LTTH_BE234.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}
<head>
    <style>
        img {
            width: 150px;
            height: 150px;
        }
    </style>    
</head>

<h2 class="bg-success">Danh sách sản phẩm</h2>


<table class="table bg-info col-lg-8 col-md-6 col-sm-3">
    <tr>
        <th class=" bg-success col-md-1"> Tên sản phẩm</th>
        <th class=" bg-success col-md-1"> Mô tả</th>
        <th class="bg-success col-md-1"> Đơn giá</th>
        <th class="bg-success col-md-1"> Hình ảnh</th>
        <th class="bg-success col-md-1"> Danh mục</th>
        <th class="bg-success col-md-4"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductPrice)
            </td>
            <td>
                <img src="@Html.DisplayFor(modelItem => item.ProductImage)" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.ProductID }, new { @class = "btn btn-primary btn-sm" }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.ProductID }, new { @class = "btn btn-primary btn-sm" }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.ProductID }, new { @class = "btn btn-primary btn-sm" })
            </td>
        </tr>
    }

</table>
<p>
    @Html.ActionLink("Thêm mới", "Create", null, new {@class="btn btn-primary"})
</p>
