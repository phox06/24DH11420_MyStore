@model _24DH11420_LTTH_BE234.Models.Customer

@{
    ViewBag.Title = "Chỉnh sửa"; 
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}

<h2>Chỉnh sửa thông tin Khách hàng</h2> @using (Html.BeginForm())
